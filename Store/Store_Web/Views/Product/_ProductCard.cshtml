@model Product

<div class="col-sm-12 col-md-6 col-lg-4 my-2">
    <div class="card" style="width: 18rem;">
        <img src="@Model.Product_ImageUrl" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">@Model.Product_Name</h5>
            <p class="card-text"> @(Model?.Product_Summary?.Length > 50 ? Model?.Product_Summary.Substring(0, 50) +
                "..." : Model?.Product_Summary)</p>

            <div class="btn btn-group">
                <a asp-action="Get" asp-route-id="@Model.Product_Id" class="btn btn-primary">
                    <i class="fa-solid fa-arrow-right"></i>
                    Details
                </a>

                <form id="@Model.Product_Id" asp-page="/cart" method="post">
                    <input type="hidden" asp-for="Product_Id" />
                    <input type="hidden" name="returnUrl" value="/Product/Get/@Model.Product_Id" />
                    <button type="submit" class="btn btn-outline-primary">
                       <i class="fa fa-cart-plus"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>