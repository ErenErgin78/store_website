@model IEnumerable<Product>
<div class="text-center">
    <div class="display-6">Product</div>

    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="Create">
            <i class="fa fa-plus"></i>
            Create
        </a>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product prd in Model)
            {
                <tr>
                    <td>@prd.Product_Id</td>
                    <td>
                        <img src="@prd?.Product_ImageUrl" alt="@prd?.Product_Name" width="50" />
                    </td>
                    <td>@prd.Product_Name</td>
                    <td>@prd.Product_Price.ToString("c")</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@prd.Product_Id">
                                <i class="fa fa-edit"></i>
                                Edit</a>

                            <a class="btn btn-info" target="_blank" asp-area="" asp-controller="Product" asp-action="Get"
                                asp-route-id="@prd.Product_Id">
                                <i class="fa fa-info"></i>
                                Page</a>

                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@prd.Product_Id">
                                <i class="fa fa-trash"></i>
                                Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>