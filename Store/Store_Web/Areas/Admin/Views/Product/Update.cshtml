@model ProductDtoForUpdate

<div class="text-center">
    <div class="display-6">Admin Update</div>
</div>

<form method="post" asp-action="Update">
    <div class="text-center" asp-validation-summary="All"></div>

    <input type="hidden" asp-for="Product_Id"/>

     <div class="form-group my-3">
        <label asp-for="CategoryId">Category</label>
        <select class="form-control" asp-items="@ViewBag.Categories" asp-for="CategoryId">
        </select>
    </div>
    
    <div class="form-group my-3">
        <label asp-for="Product_Name">Product Name</label>
        <input asp-for="Product_Name" class="form-control">
    </div>
    <div class="form-group my-3">
        <label asp-for="Product_Price">Product Price</label>
        <input asp-for="Product_Price" class="form-control">
    </div>
    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-primary" type="submit">
                <i class="fa fa-save"></i>
                Update
            </button>
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fa fa-list"></i>
                Products
            </a>
        </div>
    </div>
</form>